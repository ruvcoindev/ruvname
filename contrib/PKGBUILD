pkgname=ruvname
pkgver=$(sh ./semver/version.sh --bare)
pkgrel=1
pkgdesc="A decentralized DNS and mesh network protocol"
arch=('x86_64' 'aarch64')
license=('AGPL3')
url='https://github.com/ruvcoindev/Ruvname'
depends=('webkit2gtk' 'gtk3')
makedepends=('cargo' 'rust' 'atk' 'pango')
backup=("etc/$pkgname.conf")

build() {
	cd "$startdir/.."

	cargo build --release --all-features --target-dir=target
}

package() {
	cd "$startdir/.."

	install -Dm 755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"

	install -Dm 644 "contrib/systemd/$pkgname.service"  "$pkgdir/usr/lib/systemd/system/$pkgname.service"
	install -Dm 644 "contrib/systemd/$pkgname.sysusers" "$pkgdir/usr/lib/sysusers.d/$pkgname.conf"
	install -Dm 644 "contrib/systemd/$pkgname.tmpfiles" "$pkgdir/usr/lib/tmpfiles.d/$pkgname.conf"

	install -Dm 644 "contrib/name.ruvname.Ruvname.desktop" "$pkgdir/usr/share/applications/name.ruvname.Ruvname.desktop"

	install -Dm 644 "img/logo/ruvname_icon16.png"  "$pkgdir/usr/share/icons/hicolor/16x16/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon22.png"  "$pkgdir/usr/share/icons/hicolor/22x22/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon24.png"  "$pkgdir/usr/share/icons/hicolor/24x24/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon32.png"  "$pkgdir/usr/share/icons/hicolor/32x32/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon36.png"  "$pkgdir/usr/share/icons/hicolor/36x36/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon48.png"  "$pkgdir/usr/share/icons/hicolor/48x48/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon64.png"  "$pkgdir/usr/share/icons/hicolor/64x64/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon72.png"  "$pkgdir/usr/share/icons/hicolor/72x72/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon96.png"  "$pkgdir/usr/share/icons/hicolor/96x96/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon128.png" "$pkgdir/usr/share/icons/hicolor/128x128/apps/ruvname.png"
	install -Dm 644 "img/logo/ruvname_icon192.png" "$pkgdir/usr/share/icons/hicolor/192x192/apps/ruvname.png"
}
